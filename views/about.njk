{% extends "layout.njk" %}
{% block head %}
  <meta charset="UTF-8"/>
  <title>Sobre |
    {{ about.name }}</title>
{% endblock %}
{% block content %}
  <div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}"/>
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p>{{ about.description }}</p>
  </div>
  <div id="links-footer" class="links">
    {% for social_link in about.social_links %}
      <a href="{{ social_link.url }}" target="_blank">{{ social_link.name }}</a>
    {% endfor %}
  </div>
{% endblock %}